{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "prettier/prettier": "error",
    "func-names": ["error", "never"],
    "no-unused-vars": "warn",
    "prefer-destructuring": 0,
    "import/no-named-as-default": 0
  }
}
